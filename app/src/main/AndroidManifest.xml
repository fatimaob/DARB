<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.darb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:name=".other.Darb"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppNormalTheme">
        <activity android:name=".Splash_screen"
            android:theme="@style/AppNormalTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNormalTheme"/>

        <activity android:name=".ForgotPassword"
            android:screenOrientation="portrait"
            android:theme="@style/AppNormalTheme"/>

        <activity android:name=".Menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppNormalTheme"/>

        <activity android:name=".ResetPassword"
            android:screenOrientation="portrait"
            android:theme="@style/AppNormalTheme"/>

        <activity android:name=".AccidentFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNormalTheme"/>

        <activity android:name=".AddDriverFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNormalTheme"/>

        <activity android:name=".PartiesFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNormalTheme"/>

        <activity android:name=".SubmittedFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNormalTheme"/>

    </application>



</manifest>